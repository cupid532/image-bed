# Security - CHANGE THESE!
SECRET_KEY=your-super-secret-key-here-please-change-this
API_TOKEN=your-api-token-here

# App settings
DEBUG=False
# ALLOWED_HOSTS: Comma-separated list of domains or IP addresses
# For domain: your-domain.com
# For IP: 192.168.1.100 or your-server-ip
# You can also include ports: 192.168.1.100:8080 (though nginx typically handles this)
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Authentication settings
REQUIRE_AUTH=False  # Set to True to require token authentication for API uploads
ALLOW_GUEST_UPLOAD=True  # Allow guest uploads (images expire after 24 hours)

# Domain settings (optional)
# SITE_DOMAIN: Main site domain (e.g., example.com)
# IMAGE_DOMAIN: Separate CDN domain for images (optional, defaults to SITE_DOMAIN)
SITE_DOMAIN=
IMAGE_DOMAIN=

# HTTPS Settings
# Set to False if using IP-based access without SSL certificate
# Set to True if using domain with SSL certificate
FORCE_HTTPS=False

# Storage settings
MEDIA_ROOT=/data/images

# Upload settings
MAX_UPLOAD_SIZE=10485760
ENABLE_IMAGE_COMPRESSION=True
COMPRESSION_QUALITY=85
MAX_IMAGE_DIMENSION=4096
